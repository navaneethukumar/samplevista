CREATE TABLE PRODUCT_DETAILS (
	NAME VARCHAR(20), 
	ID VARCHAR(20),
	PRIMARY KEY (ID));
	
CREATE TABLE SUITE_DETAILS (
	ID INT NOT NULL AUTO_INCREMENT,
	PRODUCT_ID VARCHAR(20),
	PRIMARY KEY (ID),
	CONSTRAINT SUITE_DETAILS_FOREIGN_CONSTARINT FOREIGN KEY (PRODUCT_ID) REFERENCES PRODUCT_DETAILS (ID));
	
CREATE TABLE TEST_DETAILS (
	ID INT NOT NULL AUTO_INCREMENT,
	SUITE_ID INT,
	TEST_NAME VARCHAR(200),
	TEST_TYPE VARCHAR(200),
	TOTAL_TESTCASES VARCHAR(200),
	PASSED_TESTS VARCHAR(200),
	FAILED_TESTS VARCHAR(200),
	PASS_PERCENTAGE VARCHAR(200),
	TEST_SKIPPED VARCHAR(200),
	TIME_TAKEN VARCHAR(200),
	ENVIRONMENT VARCHAR(200),
	CREATION_DATE TIMESTAMP DEFAULT NOW(),	
	PRIMARY KEY (ID),
	CONSTRAINT TEST_DETAILS_FOREIGN_CONSTARINT FOREIGN KEY (SUITE_ID) REFERENCES SUITE_DETAILS (ID));