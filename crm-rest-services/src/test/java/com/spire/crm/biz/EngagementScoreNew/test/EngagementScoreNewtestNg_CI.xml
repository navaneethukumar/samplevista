<?xml version='1.0' encoding='UTF-8' ?>
<suite name="EngagementScoreNew  Service" parallel="tests" thread-count="3">

	<listeners>
		<listener class-name="com.spire.base.reporter.SpireReport" />
		<listener class-name="com.spire.base.controller.TestRetryListener" />
		<listener class-name="com.spire.base.reporter.SpireEmailReport" />
	</listeners>

	<parameter name="testRetryCount" value="3" />
	<parameter name="testRetryInterval" value="50" />

	
	<parameter name="healthCheck" value="false" />
	
	<parameter name="ui_host" value="http://192.168.2.185" />
	<parameter name="biz_host" value="http://192.168.2.185:8085" />
	<parameter name="db_host" value="://192.168.2.185:3306"/>
	<parameter name="entity_host" value="192.168.2.69" />
	<parameter name="mautic_host" value="://192.168.2.185:8085" />
	<parameter name="environment_type" value="Test" />


	<test name="EngagementScoreNew Service Service - Sanity" parallel="methods" thread-count="8">
		<groups>

			<run>
				<include name="Sanity" />
			</run>

		</groups>

		<packages>
			<package name="com.spire.crm.biz.EngagementScoreNew.test" />
		</packages>
	</test>

	<test name="EngagementScoreNew Service Service - SRG" parallel="methods" thread-count="8">
		<groups>

			<run>
				<include name="SRG" />
			</run>

		</groups>

		<packages>
			<package name="com.spire.crm.biz.EngagementScoreNew.test" />
		</packages>
	</test>
	
	<test name="EngagementScoreNew Service Service - LRG" parallel="methods" thread-count="8">
		<groups>

			<run>
				<include name="LRG" />
			</run>

		</groups>

		<packages>
			<package name="com.spire.crm.biz.EngagementScoreNew.test" />
		</packages>
	</test>


</suite>               
        
   
